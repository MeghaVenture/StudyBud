#:kivy 1.11.1
# signup_screen.kv

<SignUp_Screen>:
	name: "signup_screen"
	id: signup_screen
	MDCard:
		name: "signup_card"
		id: signup_card
		size_hint: None, None
		size: 300, 400
		pos_hint: {"center_x": 0.5, "center_y": 0.5}
		elevation: 10
		padding: 25
		spacing: 25
	    orientation: 'vertical'
		MDLabel:
			name: "signup_label"
			id: signup_label
			text: "Sign Up"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: 15
		MDTextFieldRound:
			name: "email_textfield"
		    id: email_textfield
			hint_text: "Email"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}
		MDTextFieldRound:
			name: "confirm_email_textfield"
			id: confirm_email_textfield
			hint_text: "Confirm Email"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}
		MDTextFieldRound:
			name: "password_textfield"
			id: password_textfield
			hint_text: "Password"
			icon_right: "eye-off"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}
			passward: True
		MDTextFieldRound:
		    name: "confirm_password_textfield"
			id: confirm_password_textfield
			hint_text: "Confirm Password"
			icon_right: "eye-off"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}
			passward: True
		MDRoundFlatButton:
			name: "signup_button"
			id: signup_button
			text: "Sign Up"
			font_size: 12
			pos_hint: {"center_x": 0.5}
		MDRoundFlatButton:
			name: "guest_button"
			id: guest_button
			text: "Continue as Guest"
			font_size: 12
			pos_hint: {"center_x": 0.5}
